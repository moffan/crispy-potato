{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"module": "ES6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strict": false,
		"strictNullChecks": true,
		"target": "ES2018",
	},
	"include": [
		"**/*.ts",
	]
}